---
import Python from '../svgs/SkillIcons/Python.astro';
import JavaScript from '../svgs/SkillIcons/JavaScript.astro';
import NodeJS from '../svgs/SkillIcons/NodeJS.astro';
import React from '../svgs/SkillIcons/React.astro';
import Html from '../svgs/SkillIcons/Html.astro';
import Css from '../svgs/SkillIcons/Css.astro';
import SCSS from '../svgs/SkillIcons/SCSS.astro';
import Bootstrap from '../svgs/SkillIcons/Bootstrap.astro';

const skillIcons = [
  Python,
  JavaScript,
  NodeJS,
  React,
  Html,
  Css,
  SCSS,
  Bootstrap,
];
---

<div class="skills">
  {
    skillIcons.map((SkillIcon) => {
      return (
        <div class="skill-item">
          <SkillIcon />
          <span>{SkillIcon.moduleId.match(/([\w]+)(?=\.astro)/g)[0]}</span>
        </div>
      );
    })
  }
</div>

<style>
  .skills {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  .skill-item {
    display: flex;
    justify-content: start;
    align-items: center;
    gap: 1rem;
  }
  .skill-item span {
    font-size: 1.2rem;
  }
</style>
<style is:global>
  #skills svg {
    fill: var(--primary-text);
    width: 50px;
    height: 50px;
  }
</style>
