---
import GithubIcon from '@/components/svgs/SocialIcons/github.astro';
import LinkedinIcon from '@/components/svgs/SocialIcons/linkedin.astro';
import EmailIcon from '@/components/svgs/SocialIcons/email.astro';
import ContactForm from '@/components/ContactForm';
---

<div class="social-icons">
  <a
    class="social-icons__icon github"
    href="https://github.com/jasper-th-wang"
    target="_blank"
    aria-label="GitHub (opens in a new tab)"
  >
    <GithubIcon width="36" />
  </a>
  <a
    class="social-icons__icon linkedin"
    href="https://www.linkedin.com/in/jasper-th-wang/"
    target="_blank"
    aria-label="Linkedin (opens in a new tab)"
  >
    <LinkedinIcon width="36" />
  </a>
  <a
    class="social-icons__icon email"
    href="mailto: jasper.th.wang@icloud.com"
    target="_blank"
    aria-label="Email (opens email client)"
  >
    <EmailIcon width="36" />
  </a>
  <ContactForm client:load />
</div>

<style>
  .social-icons {
    margin-top: 1.5rem;
    display: flex;
    gap: 1rem;
  }

  .social-icons__icon {
    z-index: 1;
    cursor: pointer;
    opacity: 0.7;
    transition-duration: 500ms;
  }

  .social-icons__icon:hover {
    opacity: 1;
  }
</style>
