---
import GithubIcon from './svgs/SocialIcons/github.astro';
import LinkedinIcon from './svgs/SocialIcons/linkedin.astro';
---

<div class="social-icons">
  <a class="social-icons__icon github">
    <GithubIcon width="30" height="30" />
  </a>
  <a class="social-icons__icon linkedin">
    <LinkedinIcon width="30" height="30" />
  </a>
</div>

<style>
  .social-icons {
    margin-top: 1.5rem;
    display: flex;
    gap: 1rem;
  }

  .social-icons__icon {
    z-index: 999;
    cursor: pointer;
    opacity: 0.7;
    transition-duration: 500ms;
  }

  .social-icons__icon:hover {
    opacity: 1;
  }
</style>
