---
interface Props {
  navItems: string[];
}

const { navItems } = Astro.props;
---

<div class="nav">
  <ul>
    {
      navItems.map((item) => {
        return (
          <li>
            <a href={`#${item}`} class="nav__item" id={`${item}Nav`}>
              {item}
            </a>
          </li>
        );
      })
    }
  </ul>
</div>
