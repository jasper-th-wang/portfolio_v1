---
import AboutSection from './Sections/AboutSection.astro';
import ExperienceSection from './Sections/ExperienceSection.astro';
import EducationSection from './Sections/EducationSection.astro';
import SkillsSection from './Sections/SkillsSection.astro';
import ProjectsSection from './Sections/ProjectsSection.astro';
const sectionComponents = {
  about: AboutSection,
  experience: ExperienceSection,
  education: EducationSection,
  skills: SkillsSection,
  projects: ProjectsSection,
};
interface Props {
  navItems: string[];
}

const { navItems } = Astro.props;
---

<main>
  {
    navItems.map((section) => {
      const SpecificSectionComponent = sectionComponents[section];
      return (
        <section id={section}>
          <h1>{section.charAt(0).toUpperCase() + section.slice(1)}</h1>
          {SpecificSectionComponent && <SpecificSectionComponent />}
        </section>
      );
    })
  }
  <footer>
    <p>
      Built with love using <a href="https://astro.build/" target="_blank"
        >Astro</a
      >, designed with inspiration from various websites on <a
        href="https://www.awwwards.com/"
        target="_blank">awwwards.com</a
      >
    </p>
    <p>Â© Jasper Wang {new Date().getFullYear()}</p>
  </footer>
</main>

<style>
  main > section {
    padding: 2rem;
    padding-top: 0;
    padding-bottom: 6rem;
  }

  main h1 {
    text-transform: uppercase;
    font-size: 1.7rem;
    margin-bottom: 2.5rem;
  }

  main h2 {
    font-size: 1rem;
  }

  footer {
    font-family: 'Poppins', sans-serif;
    padding-left: 2rem;
    padding-bottom: 2rem;
  }
  footer p {
    color: rgba(var(--primary-text-value), 0.6);
  }
  footer a {
    color: var(--primary-text);
  }

  @media only screen and (min-width: 1024px) {
    main {
      width: 60%;
      padding: 6rem 2rem;
    }

    main > section {
      scroll-margin-top: 6rem;
      padding: 0;
      padding-bottom: 6rem;
      opacity: 0.5;
      transition-duration: 500ms;
    }

    .section-focus {
      opacity: 1 !important;
    }
    footer {
      padding-left: 0;
    }
  }
</style>
