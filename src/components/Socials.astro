---
import GithubIcon from "./svgs/SocialIcons/github.astro";
import LinkedinIcon from "./svgs/SocialIcons/linkedin.astro";
import EmailIcon from "./svgs/SocialIcons/email.astro";
---

<div class="social-icons">
  <a
    class="social-icons__icon github"
    href="https://github.com/jasper-th-wang"
    target="_blank"
    aria-label="GitHub (opens in a new tab)"
  >
    <GithubIcon width="30" height="30" />
  </a>
  <a
    class="social-icons__icon linkedin"
    href="https://www.linkedin.com/in/tsz-ho-jasper-wang-644b73132/"
    target="_blank"
    aria-label="Linkedin (opens in a new tab)"
  >
    <LinkedinIcon width="30" height="30" />
  </a>
  <a
    class="social-icons__icon email"
    href="mailto: jasper.th.wang@icloud.com"
    target="_blank"
    aria-label="Email (opens email client)"
  >
    <EmailIcon width="30" height="30" />
  </a>
</div>

<style>
  .social-icons {
    margin-top: 1.5rem;
    display: flex;
    gap: 1rem;
  }

  .social-icons__icon {
    z-index: 999;
    cursor: pointer;
    opacity: 0.7;
    transition-duration: 500ms;
  }

  .social-icons__icon:hover {
    opacity: 1;
  }
</style>
