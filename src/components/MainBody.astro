---
import AboutSection from './Sections/AboutSection.astro';
import ExperienceSection from './Sections/ExperienceSection.astro';
import EducationSection from './Sections/EducationSection.astro';
import SkillsSection from './Sections/SkillsSection.astro';
import ProjectsSection from './Sections/ProjectsSection.astro';
const sectionComponents = {
  about: AboutSection,
  experience: ExperienceSection,
  education: EducationSection,
  skills: SkillsSection,
  projects: ProjectsSection,
};
interface Props {
  navItems: string[];
}

const { navItems } = Astro.props;
---

<main>
  {
    navItems.map((section) => {
      const SpecificSectionComponent = sectionComponents[section];
      return (
        <section id={section}>
          <h1>{section.charAt(0).toUpperCase() + section.slice(1)}</h1>
          {SpecificSectionComponent && <SpecificSectionComponent />}
        </section>
      );
    })
  }
</main>

<style>
  main > section {
    padding: 2rem;
    padding-top: 0;
    padding-bottom: 6rem;
  }

  main h1 {
    text-transform: uppercase;
    font-size: 1.7rem;
    margin-bottom: 2.5rem;
  }

  main h2 {
    font-size: 1rem;
  }

  @media only screen and (min-width: 1024px) {
    main {
      width: 60%;
      padding: 6rem 2rem;
    }

    main > section {
      scroll-margin-top: 6rem;
      padding: 0;
      padding-bottom: 6rem;
      /* margin-bottom: 4rem; */
      opacity: 0.5;
      transition-duration: 500ms;
    }

    .section-focus {
      opacity: 1 !important;
    }

    main > section > h1 {
      /* display: none; */
    }
  }
</style>
