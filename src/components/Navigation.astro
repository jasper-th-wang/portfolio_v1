<style>
  .nav {
    display: none;
  }

  .nav ul {
    list-style-type: none;
    padding: 0;
  }

  .nav li {
    text-transform: uppercase;
    font-weight: bold;
    letter-spacing: 0.1rem;
  }

  .nav__item {
    color: rgb(232, 231, 203);
    opacity: 0.4;
    transition-duration: 500ms;
  }

  .nav__item:not(.toggled):hover {
    opacity: 0.7;
  }

  @media only screen and (min-width: 1024px) {
    .nav {
      display: block;
    }
  }
</style>
